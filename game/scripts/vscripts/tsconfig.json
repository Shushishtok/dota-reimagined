{
    "compilerOptions": {
        "rootDir": ".",
        "target": "esnext",
        "lib": ["esnext"],
        "types": ["dota-lua-types/normalized"],
        "plugins": [{ "transform": "@moddota/dota-lua-types/transformer" }],
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "strict": true
    },
    "tstl": {
        "luaTarget": "JIT",
        "sourceMapTraceback": true
    }
}
